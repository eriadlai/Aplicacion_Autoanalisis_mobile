<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oPrimary"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".ui.slideshow.ResultadoDepresionQuiz">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Resultados"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/oTV_AnuncioDepresion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tu nivel de depresion es:"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/oTV_ExplicacionDepresion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Explicacion"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/oBtnFinalizarDepresion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/oSecondary"
        android:text="Finalizar"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>